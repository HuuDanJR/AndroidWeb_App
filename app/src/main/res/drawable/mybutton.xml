<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <gradient android:angle="-90" android:startColor="@color/colorTitle2" android:endColor="@color/colorTitle2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <solid android:color="@color/colorTitle"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorTitle" />
            <gradient android:angle="-90" android:startColor="@color/colorTitle" android:endColor="@color/colorTitle" />
        </shape>
    </item>
</selector>